<% training_post.training_post_comments.each do |training_post_comment| %>
  <div class="d-flex align-items-end">
    <div>
      <%= link_to training_post_training_post_comments_path(training_post_comment.end_user) do %>
      <%= image_tag training_post_comment.end_user.get_user_image(40,40) %><br>
      <% end %>
    </div>
    <div>
      <%= training_post_comment.comment %>
    </div>
    <div id="comment_destroy_<%= training_post.id %>">
      <% if training_post_comment.end_user == current_end_user %>
        <%= link_to 'Destroy', training_post_training_post_comment_path(training_post_comment.training_post, training_post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to my_page_path(training_post_comment.end_user) do %>
      <%= training_post_comment.end_user.name %>
    <% end %>
</div>
<% end %>
