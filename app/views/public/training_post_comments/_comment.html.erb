<% training_post.training_post_comments.each do |training_post_comment| %>
  <div class="mb-3 text-size">
    <div class="d-flex">
      <div>
      <%= link_to my_page_path(training_post_comment.end_user) do %>
        <div><%= image_tag training_post_comment.end_user.get_user_image(60,60) %></div>
        <div><%= training_post_comment.end_user.name %></div>
      <% end %>
      </div>
      <div class="text-left ml-3">
        <%= safe_join(training_post_comment.comment.split("\n"),tag(:br)) %>
      </div>
    </div>

    <div id="comment_destroy_<%= training_post.id %>">
      <% if training_post_comment.end_user == current_end_user %>
      <div class="mb-4">
        <%= link_to 'コメントを削除', training_post_training_post_comment_path(training_post_comment.training_post, training_post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger text-size" %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
