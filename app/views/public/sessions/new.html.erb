<div class='container'>
  <div class='row text-center'>
    <div class="col pt-2 pb-4">

      <h2 class="font-weight-bold">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード"  %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する"  %>
          </div>
        <% end %>

        <div class="actions pt-2 pb-3">
          <%= f.submit "Let's Enjoy!", class:"btn btn-primary" %>
        </div>
      <% end %>

      <div class="p-4">
        <%= link_to "かんたんログインはこちら", end_users_guest_sign_in_path, class: "btn btn-secondary btn-sm sign_in", method: :post %>
      </div>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>
