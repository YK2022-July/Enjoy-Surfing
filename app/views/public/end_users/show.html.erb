<div class='container'>
  <div class='row text-center'>
    <div class="col">
      <h1><%= @end_user.name %>さんのマイページ</h1>
    </div>
  </div>
  <div class='row'>
    <div class="col-3">
      <h3 class="font-weight-bold bg-light">Profile</h3>
      <div class="py-2"><%= image_tag @end_user.get_user_image(100,100) %></div>
      <div class="font-weight-bold font-italic text-black-50 bg-light">ユーザーネーム</div>
      <div>
        <%= @end_user.name %>
      </div>
      <div class="font-italic text-black-50 bg-light">年齢</div>
      <div>
        <%= @end_user.age %>
      </div>
      <div class="font-italic text-black-50 bg-light">性別</div>
      <div>
        <%= @end_user.sex %>
      </div>
      <div class="font-italic text-black-50 bg-light">エリア</div>
      <div>
        <%= @end_user.area_id %>
      </div>
      <div class="font-italic text-black-50 bg-light">ホーム</div>
      <div>
        <%= @end_user.home %>
      </div>
      <div class="font-italic text-black-50 bg-light">種目</div>
      <div>
        <%= @end_user.type_id %>
      </div>
      <div class="font-italic text-black-50 bg-light">スタンス</div>
      <div>
        <%= @end_user.stance %>
      </div>
      <div class="font-italic text-black-50 bg-light">サーフィン歴</div>
      <div>
        <%= @end_user.history %>
      </div>
      <div class="font-italic text-black-50 bg-light">自己紹介</div>
      <div>
        <%= @end_user.introduction %>
      </div>
      <div class="font-size"><%= link_to "プロフィールを編集", end_user_edit_path %></div>
    </div>
    <div class="col-6">
      <div class="border border-5">
        <ul>
          <li><%= @goal&.goal %></li>
        </ul>
        <ul>
          <li><%= @immediate_goal&.goal1 %></li>
        </ul>
          <% if !@immediate_goal&.goal2.nil? %>
          <% else %>
          <ul>
            <li><%= @immediate_goal&.goal2 %></li>
          </ul>
          <% end %>
        <ul>
          <li><%= @today_goal&.goal1 %></li>
        </ul>
          <% if !@today_goal&.goal2.nil? %>
          <% else %>
          <ul>
            <li><%= @today_goal&.goal2 %></li>
          </ul>
          <% end %>
          <% if !@today_goal&.goal3.nil? %>
          <% else %>
          <ul>
            <li><%= @today_goal&.goal3 %></li>
          </ul>
          <% end %>
      </div>
    </div>
    <div class="btn-wrapper col-3">
      <div class="row">
        <%= link_to "トレーニング目標を設定する", new_goal_path, class:"btn btn-warning btn-sm btn-block mb-3" %>
      </div>
      <div class="row">
        <%= link_to "トレーニングを記録する",  training_posts_new_path, class:"btn btn-success btn-sm btn-block mb-3" %>
      </div>
      <div class="row">
        <%= link_to "自分の記録を見る",  training_posts_my_posts_path, class:"btn btn-funky-moon btn-sm btn-block mb-3" %>
      </div>
    </div>
  </div>
</div>
