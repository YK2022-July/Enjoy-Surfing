<div class="container">
  <div class="row text-center">
    <div class="col pt-2 pb-4">
      <h3 class="font-weight-bold">投稿（コメント）一覧</h3>
    </div>
  </div>
  <div class="row text-center pb-5">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th scope="col">コメントID</th>
          <th scope="col">ユーザー名</th>
          <th scope="col">コメント</th>
          <th scope="col">詳細</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td></td>
          <td><%= comment.id %></td>
          <td><%= comment.end_user.name %></td>
          <td><%= comment.comment.truncate(30) %></td>
          <td><%= link_to "詳細情報", admin_training_post_comment_path(comment.id), class:"btn btn-secondary btn-sm" %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
